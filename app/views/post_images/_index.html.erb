<div class="card-list-container  d-flex flex-wrap g-2">
  <% post_images.each do |post_image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_image_path(post_image) do %>
      <%= image_tag post_image.image,class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <%= image_tag post_image.user.get_profile_image(50,50),class:"rounded-circle"; %>
        <%= link_to user_path(post_image.user.id),class:"ml-2 text-dark" do %>
          <strong><%= post_image.user.name %></strong>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>

