<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td>
            <%= link_to user_path(user) do %>
              <%= user.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
      <tr>
        <th>Title</th>
        <th>Caption</th>
      </tr>
    </thead>
    <tbody>
      <% @post_images.each do |post_image| %>
        <tr>
          <td>
            <%= link_to post_image_path(post_image) do %>
              <%= post_image.title %>
            <% end %>
          </td>
          <td><%= post_image.caption %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>